{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types": ["src/types/*"],
      "@/data/*": ["src/data/*"],
      "@/config/*": ["src/config/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/content/*": ["src/content/*"],
      "@/components/*": ["src/components/*"]
    }
  }
}
